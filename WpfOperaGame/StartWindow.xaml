<Window x:Class="WpfOperaGame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOperaGame"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StartWindow" Height="600  " Width="800">
    <Grid Width="800" Height="450">
        <Label Content="Opera House Manager" Style="{StaticResource ResourceKey=titleLabel}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="newGameButton" Content="New Game" Click="newGameButton_Click"/>
            <Button x:Name="loadGameButton" Content="Load Game" Click="loadGameButton_Click"/>
            <Button x:Name="optionsButton" Content="Options" Click="optionsButton_Click"/>
            <Button x:Name="aboutButton" Content="About" Click="aboutButton_Click"/>
            <Button x:Name="quitButton" Content="Quit" Click="quitButton_Click"/>
        </StackPanel>


    </Grid>
</Window>
