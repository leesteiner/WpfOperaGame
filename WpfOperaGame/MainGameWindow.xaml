<Window x:Class="WpfOperaGame.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOperaGame"
        mc:Ignorable="d"
        Title="MainGameWindow" Height="450" Width="800" Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        >
    
    <Grid>
        <Label x:Name="gameTimeLabel" Content="{Binding Path=gameDate, StringFormat=MM-dd-yyyy}" HorizontalAlignment="Right" VerticalAlignment="Top" />

    </Grid>
</Window>
