<Window x:Class="WpfOperaGame.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOperaGame"
        mc:Ignorable="d"
        Title="MainGameWindow" Height="450" Width="800" Loaded="Window_Loaded"
        
        >
    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->
    
    <Grid x:Name="testGrid">
        <Label Name="gameTimeLabel" Content="{Binding gameDate}" HorizontalAlignment="Right" VerticalAlignment="Top" />
        <Label Name="theLabel" Content="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Click Me" Click="Button_Click" Margin="310,241,332,129"/>
        <Button Content="Click Me Later" Click="Button_Click_1" Margin="310,291,332,79"/>
    </Grid>
</Window>
